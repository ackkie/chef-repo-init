#
# Single+No Bin Log
#

[mysqld]
character-set-server=<%= node['mysql']['character-set-server'] %>
datadir=/var/lib/mysql
socket=/var/lib/mysql/mysql.sock
symbolic-links=0
user=mysql
#tmpdir=/tmp/

skip_name_resolve

#
#パフォーマンススキーマ
#

# http://dev.mysql.com/doc/refman/5.5/en/performance-schema.html
;performance_schema

#
#SQLログ設定
#

#log_output=TABLE,FILE
log_output=FILE
long-query-time=1.7

#non-index sql
#log-queries-not-using-indexes
slow_query_log=ON
slow_query_log_file=/var/log/mysql-slow.log

#
#チューニング
#

join_buffer_size=256K
key_buffer_size=8M
max_allowed_packet=32M
myisam_sort_buffer_size=32M
query_cache_size=128M
read_buffer_size=8M
read_rnd_buffer_size=8M
sort_buffer_size=4M
table_open_cache=512
thread_cache_size=24
# Try number of CPU's*2 for thread_concurrency
thread_concurrency=2

#same value
max_heap_table_size=512M
tmp_table_size=512M

#
#innodb
#

innodb_additional_mem_pool_size=20M

# You can set .._buffer_pool_size up to 50 - 80 %
# of RAM but beware of setting memory usage too high
innodb_buffer_pool_size=<%= node['mysql']['innodb_buffer_pool_size'] %>
innodb_data_file_path=ibdata1:1280M:autoextend
innodb_data_home_dir=/var/lib/mysql/
innodb_file_per_table

#0は毎秒コミットで本番とのレプリケーションを高速化するため
#本番運用なら1
innodb_flush_log_at_trx_commit=1

#ダブルバッファリング防止(innodb onlyのときに設定？)
innodb_flush_method=O_DIRECT
#innodb_lock_wait_timeout=50
innodb_log_buffer_size=8M


# Set .._log_file_size to 25 % of buffer pool size
innodb_log_files_in_group=2
innodb_log_file_size=192M
#innodb_log_group_home_dir=/var/lib/mysql/

innodb_thread_concurrency=4

#
#トランザクションログとレプリケーション
#

# binary logging format - mixed recommended
#binlog_format=mixed

#ログ保持日数（ローテーションや起動のときに削除）
#expire_logs_days=90

# binary logging is required for replication
#log-bin=mysql-bin
#log-slave-updates
#log-update=/path-to-dedicated-directory/hostname
#relay-log=/var/lib/mysql/mysqld-relay-bin
#relay-log-index=/var/lib/mysql/mysqld-relay-bin

#don't user replicate-ignore-db parameter
#replicate-ignore-db=mysql


# required unique id between 1 and 2^32 - 1
# defaults to 1 if master-host is not set
# but will not function as a master if omitted
#server-id=1

#read-only
#skip-slave-start


[mysqld_safe]
log-error=/var/log/mysqld.log
pid-file=/var/run/mysqld/mysqld.pid

[mysqldump]
default-character-set=<%= node['mysql']['default-character-set'] %>
quick
max_allowed_packet=16M

[mysql]
default-character-set=<%= node['mysql']['default-character-set'] %>
no-auto-rehash
show-warnings
# Remove the next comment character if you are not familiar with SQL
#safe-updates
